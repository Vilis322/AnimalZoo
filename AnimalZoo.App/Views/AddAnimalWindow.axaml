<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AnimalZoo.App.ViewModels"
        x:Class="AnimalZoo.App.Views.AddAnimalWindow"
        Width="420" Height="260"
        Title="{Binding TextDialogTitle}"
        CanResize="False"
        mc:Ignorable="d">

  <Window.DataContext>
    <vm:AddAnimalViewModel/>
  </Window.DataContext>

  <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*">
    <TextBlock Margin="12" FontSize="18" FontWeight="SemiBold"
               Text="{Binding TextCreateHeading}" />

    <Grid Grid.Row="1" Margin="12"
          RowDefinitions="Auto,Auto,Auto"
          ColumnDefinitions="Auto,8,*">
      <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center"
                 Text="{Binding TextNameLabel}"/>
      <TextBox   Grid.Row="0" Grid.Column="2" Margin="0,0,0,8"
                 Text="{Binding Name, Mode=TwoWay}"
                 MinWidth="200"
                 HorizontalAlignment="Stretch" />

      <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center"
                 Text="{Binding TextAgeLabel}"/>
      <NumericUpDown Grid.Row="1" Grid.Column="2" Margin="0,0,0,8"
                     Value="{Binding Age, Mode=TwoWay}"
                     Minimum="0" Maximum="100"
                     MinWidth="120"
                     HorizontalAlignment="Left"/>

      <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center"
                 Text="{Binding TextTypeLabel}"/>
      <ComboBox Grid.Row="2" Grid.Column="2" Margin="0,0,0,8"
                ItemsSource="{Binding AnimalTypes}"
                SelectedItem="{Binding SelectedType, Mode=TwoWay}"
                MinWidth="200"
                HorizontalAlignment="Stretch">
        <ComboBox.ItemTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding DisplayName}"/>
          </DataTemplate>
        </ComboBox.ItemTemplate>
      </ComboBox>
    </Grid>

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="12" Spacing="8">
      <Button Content="{Binding TextCancel}" Click="OnCancel" MinWidth="90"/>
      <Button Content="{Binding TextOk}" IsDefault="True" Click="OnOk" MinWidth="90"/>
    </StackPanel>
  </Grid>
</Window>
